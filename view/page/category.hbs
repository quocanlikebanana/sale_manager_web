<div class="container-fluid">
    <div class="row">
        <form class="col-md-6 d-flex my-3">
            <input class="form-control me-3"
                type="search"
                id="categoryInput"
                placeholder="Category">
            <div class="d-flex flex-column align-items-stretch">
                <button
                    class="btn btn-success rounded-2 d-flex align-items-baseline"
                    type="button"
                    data-toggle="tooltip"
                    data-placement="top"
                    id="insertConfirmButton"
                    onclick="confirmInsert()"
                    title="Add"><i class="fa fa-plus"></i><span>&nbsp;Add</span></button>
                <button
                    class="btn btn-warning rounded-2 d-flex align-items-baseline"
                    type="button"
                    data-toggle="tooltip"
                    data-placement="top"
                    id="updateConfirmButton"
                    onclick="confirmUpdate()"
                    title="Update"><i class="fa fa-edit"></i><span>&nbsp;Update</span></button>
            </div>
        </form>
    </div>

    <div class="row">
        <table class="table">
            <thead class="table-primary">
                <tr>
                    <th class="py-3"
                        style="width: 70%;">Loại Sản Phẩm</th>
                    <th class="py-3">Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <td style="display: none;">{{this.CatID}}</td>
                    <td class="py-3 ps-3">{{this.CatName}}</td>
                    <td class="py-3 align-middle">
                        <ul class="list-inline m-0">
                            <li class="list-inline-item">
                                <button class="btn btn-warning btn-sm rounded-2"
                                    type="button"
                                    data-toggle="tooltip"
                                    data-placement="top"
                                    onclick="updateCategory.call(this)"
                                    title="Edit"><i class="fa fa-edit"></i></button>
                            </li>
                            <li class="list-inline-item">
                                <button class="btn btn-danger btn-sm rounded-2"
                                    type="button"
                                    data-toggle="tooltip"
                                    data-placement="top"
                                    onclick="deleteCategory.call(this)"
                                    title="Delete"><i class="fa fa-trash"></i></button>
                            </li>
                        </ul>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>